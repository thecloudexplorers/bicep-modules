  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run pester tests",
      "type": "PowerShell",
      "request": "launch",
      "script": "${workspaceFolder}/src/scripts/pester/pesterRun.ps1",
      "cwd": "${cwd}",
      "args": [
        "-WorkingDirectory",
        "${workspaceFolder}",
        "-ModuleName",
        "loganalyticsworkspace"
      ],
    },
    {
      "name": "PowerShell: Launch Current File",
      "type": "PowerShell",
      "request": "launch",
      "script": "${file}",
      "cwd": "${file}"
    }
  ]
}
